{
  "name": "spoznaj-svet",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.js",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "electron": "electron .",
    "dist:win": "electron-builder --win"
  },

  "build": {
    "appId": "sk.spoznajsvet.app",
    "productName": "Spoznaj svet",

    "files": [
      "dist/**",
      "electron/**"
    ],

    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },

  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.5",
    "@types/node": "^24.10.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "svelte": "^5.43.5",
    "svelte-check": "^4.3.3",
    "typescript": "~5.9.3",
    "vite": "^7.2.2"
  }
}
